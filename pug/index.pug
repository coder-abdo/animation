    - var content = {nav:{logo:"UNION", ul: ["Home", "Store","About", "Clients", "Contact us"]}, slider:["stylus suit", "casual style", "cool accessories"]}
        header.header
            nav.header__nav.nav
                .nav__logo
                    span= content.nav.logo
                ul.nav__list
                    -for(let i = 0;i < content.nav.ul.length;i++)
                        li.nav__list-item
                            a(href="#" class="nav__link")= content.nav.ul[i]
                .nav__utils
                    a(href="#" class="nav__link") Sign Up
                    .shopping
                        +shoppingcart
        section#home
            h1.main-title Creative Styles
            .slider
                .slider__wrapper
                    -for(let j = 0;j < 3;j++)
                        .slide
                            img(src=`./images/${j+1}.jpeg` class="slide__img" title=`slide image ${j+1}`)
                            h2.slide__title.slide__title--large= content.slider[j]
                            .count
                                span.counting= j+1
                                span.total / 3   
            .social
                .instagram
                    +instagram
                .facebook
                    +facebook
                .twiiter
                    +twiiter
                .linkedin
                    +linkedin
        script(src='https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js')
        script(src="./app/main.js")
